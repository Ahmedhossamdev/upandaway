

<section class="packages" id='package'>
    <div class="box-container">

        <% tours.forEach(function(tour) { %>
            <div class="box">
                <img src="<%= tour.imgUrl %>" alt="">
                <div class="content">
                    <h3><i class="fas fa-map-marker-alt"></i> <%= tour.location %> </h3>
                    <p><%= tour.description %></p>
                    <div class="stars">
                        <% for(let i=0; i<5; i++) { %>
                            <% if(i<tour.rating) { %>
                                <i class="fas fa-star"></i>
                            <% } else { %>
                                <i class="far fa-star"></i>
                            <% } %>
                        <% } %>
                    </div>
                    <div class ="price"> $<%= tour.price %> <span>$<%= tour.discount %></span></div>
                    <a href="#" class="btn">book now</a>
                </div>
            </div>
        <% }) %>

    </div>
</section>