<section class="packages" id='package'>
    <h1 class="heading">
        <span>T</span>
        <span>O</span>
        <span>U</span>
        <span>R</span>
        <span>S</span>
    </h1>
    <!--redirect to add-cards-->

    <div class="box-container">
        <% tours.forEach(function(tour){ %>
            <div class="card">
                <div class="card__header">
                    <div class="card__picture">
                        <div class="card__picture-overlay">&nbsp;</div>
                        <img class="card__picture-img" src="<%= tour.imgUrl %>" alt="">
                    </div>
                    <h3 class="heading-tertirary"><span><%= tour.name %> </span></h3>
                </div>
                <div class="card__details">
                    <h4 class="card__sub-heading"><%= tour.difficulty %>  <%= tour.duration %>-day tour</h4>
                    <p class="card__text"><%= tour.description %>...</p>
                    <div class="card__data">
                        <svg class="card__icon">
                            <use xlink:href="/img/icons.svg#icon-map-pin"></use>
                        </svg>
                        <span><%= tour.location %></span></div>
                    <div class="card__data">
                        <svg class="card__icon">
                            <use xlink:href="/img/icons.svg#icon-calendar"></use>
                        </svg>
                        <span><%= tour.startDates %></span></div>
                    <div class="card__data">
                        <svg class="card__icon">
                            <use xlink:href="/img/icons.svg#icon-flag"></use>
                        </svg>
                        <span>4 stops</span></div>
                    <div class="card__data">
                        <svg class="card__icon">
                            <use xlink:href="/img/icons.svg#icon-user"></use>
                        </svg>
                        <span><%= tour.maxGroupSize %></span></div>
                </div>
                <div class="card__footer">
                    <p><span class="card__footer-value">$<%= tour.price %></span> <span class="card__footer-text">per person</span>
                    </p>
                    <p class="card__ratings"><span class="card__footer-value">4.7</span> <span
                                class="card__footer-text">rating
                </span></p><a class="btn btn--green btn--small" href="/details/<%= tour._id %>">Details</a>
                </div>
            </div>
        <% }) %>

    </div>

    <style>
        .pagination {
            display: flex;
            justify-content: center;
            align-items: flex-end;
            margin-top: 20px;
        }

        .pagination a {
            display: inline-block;
            padding: 5px 10px;
            margin: 0 5px;
            font-size: 14px;
            text-decoration: none;
            color: #ffffff;
        }

        .pagination .active {
            font-weight: bold;

        }
    </style>

    <div class="pagination">
        <% if (currentPage > 1) { %>
            <a href="/packages?page=<%= currentPage - 1 %>" class="btn btn--black"><%= currentPage - 1 %></a>
        <% } %>
        <a href="/packages?page=<%= currentPage %>" class="btn btn--black active"><%= currentPage %></a>
        <% if (currentPage < totalPages) { %>
            <a href="/packages?page=<%= currentPage + 1 %>" class="btn btn--black"><%= currentPage + 1 %></a>
        <% } %>
    </div>

</section>


